# input text
{% macro input(id, label, valeur = null, erreur = null, inputErreur = null, type = "text", autre) %}
    <div class="mb-1">

        <label for="{{ id }}">{{ label }}</label>

        {% if type == 'select' %}

            <select name="{{ id }}" id="{{ id }}"{% if erreur %} class="v_erreur"{% endif %}>
                <option value="">SÃ©lectionnez</option>
                {% for key, item in autre.selectOptions %}
                    <option value="{{ key }}"{% if valeur == key %} selected{% endif %}>
                        {{ item }} ({{ key }})
                    </option>
                {% endfor %}
            </select>

        {% else %}

            <input type="{{ type }}" 
               name="{{ id }}" 
               id="{{ id }}"
               {% if erreur %} class="v_erreur"{% endif %}
               {% if inputErreur %} class="v_erreur"{% endif %}
               value="{{ valeur }}">

        {% endif %}
        
        {% if erreur %}
            <label for="{{ id }}" class="text-6">
                {{ erreur }}
            </label>
        {% endif %}
    </div>
{% endmacro %}


# item du menu
{% macro itemMenu(pageUrl, pageActive, pageLabel) %}
    <li>
        {% if pageActive %}
        <span class="px-1">
            {{ pageLabel }}
        </span>
        {% else %}
            {% if pageUrl == 'deconnexion' %}
                <a href="action/deconnexion.php">{{ pageLabel }}</a>
            {% else %}
                <a href="index.php?p={{ pageUrl }}">{{ pageLabel }}</a>
            {% endif %}
        {% endif %}
    </li>
{% endmacro %}