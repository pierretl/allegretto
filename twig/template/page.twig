{% extends 'template/base.twig' %}

{% import 'macro.twig' as macro %}

{% block body %}

<body class="bg-3 pr df fd-c">


    <svg viewBox="0 0 1366 63.39" class="fill-1">
        <path d="M1366,0H0V51.92c35.9-3.71,72.27-8.27,108.56-13A2404.27,2404.27,0,0,1,488.83,34c85.44,5.78,168.23,16.11,253.38,22.43,52.1,3.84,105.12,6.12,158.26,6.75V62.5a2431.82,2431.82,0,0,0,247.77-5.82c52.7-4,107-10.68,161.2-17.79q28.1-2.64,56.56-4.58Z"></path>
    </svg>


    <div class="df fd-c--medium ai-c header">
        <img src="style/img/logo.svg" alt="" loading="lazy" class="logo">
        <h1 class="m-0">
            {% if block("title") is defined %}
                {{ block('title') }}
            {% else %}
                Allegretto
            {% endif %}
        </h1>
    </div>


    {% if session.utilisateur.mail %}
        <div class="page mt-05 mb-1">
            <ul class="reset df jc-c fw-w">
                {% if session.utilisateur.groupe == 'admin' %}
                    {{ macro.itemMenu('admin',pageActive('admin'), 'Administration') }}
                {% endif %}
                {{ macro.itemMenu('calendrier',pageActive('calendrier'), 'Calendrier') }}
                {{ macro.itemMenu('sejour',pageActive('sejour'), 'Proposer un séjour (a faire)') }}
                {{ macro.itemMenu('deconnexion', '', 'Déconnexion') }}
            </ul>
        </div>
    {% endif %}


    <svg viewBox="0 0 1366 34.13" class="fill-2 vague-bas">
        <path d="M1366,6.1c-14.6-0.7-29.2-1.4-43.9-2.1c-121.4-5.2-247.8-5.5-369-0.1c-52.7,2.3-107,6.2-161.2,10.4
			c-123.9,6.8-253.7,7.8-380.3,2.8C326.2,13.8,243.4,7.7,158.3,4C106.2,1.8,53.1,0.5,0,0.1V37h1366V6.1z"></path>
    </svg>


    
    <div class="bg-2 df fg-1 pr">
        {% block content %}{% endblock %}
    </div>


</body>

{% endblock %}